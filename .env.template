# ========================================
# MAKIS EAD - CONFIGURAÇÃO CORRETA
# ========================================
# Este arquivo contém as configurações CORRETAS
# Copie este conteúdo para o seu .env
# ========================================

# APLICAÇÃO
APP_NAME="Étude Rapide"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=America/Port-au-Prince
APP_URL=http://localhost:8000
APP_LOCALE=fr

# BANCO DE DADOS
# IMPORTANTE: Use 'db' como host quando rodar no Docker
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=makis_ead
DB_USERNAME=makis_user
DB_PASSWORD=makis_password

# CACHE & SESSÃO
# CRÍTICO: Use 'file' para evitar erro 419 Page Expired
CACHE_STORE=file
SESSION_DRIVER=file
SESSION_LIFETIME=120
QUEUE_CONNECTION=database

# MYSQL DOCKER
# DEVE SER IGUAL AO DB_* acima
MYSQL_DATABASE=makis_ead
MYSQL_USER=makis_user
MYSQL_PASSWORD=makis_password
MYSQL_ROOT_PASSWORD=root_password_secure_123

# MOEDA
DEFAULT_CURRENCY=HTG
CURRENCY_API_PROVIDER=exchangerate-api
CURRENCY_API_KEY=

# PAGAMENTOS (modo teste)
MERCADOPAGO_ACCESS_TOKEN=
MERCADOPAGO_PUBLIC_KEY=
MERCADOPAGO_MODE=sandbox

STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_MODE=test

# EMAIL (use Mailtrap para testes)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@etuderapide.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS (opcional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# PUSHER (opcional)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

# ANALYTICS
GOOGLE_ANALYTICS_ID=
FACEBOOK_PIXEL_ID=

# SEO
SITE_DESCRIPTION="Plateforme d'apprentissage en ligne pour la francophonie"
SITE_KEYWORDS="cours en ligne, formation, éducation, Haiti, français, apprentissage rapide"
